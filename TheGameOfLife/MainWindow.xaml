<Window x:Class="TheGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheGameOfLife"
        mc:Ignorable="d"
        Title="Game Of Life" Height="545" Width="617" ResizeMode="NoResize">
	<Grid Loaded="MainWindowLoaded">
		<Canvas x:Name="game" HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="500" Loaded="game_Loaded" Margin="99,0,0,0" />
		<Button Content="Start!" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStart_Click" Height="20" />
		<Button Content="Next &gt;&gt;" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="75" Click="ButtonNext_Click" Height="20" />
		<Label x:Name="coordinate" Content="0,0" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="75" Height="26"/>
		<Label x:Name="round" Content="0" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top" Width="75" Height="26"/>
		<Slider x:Name="gameSpeedSlider" HorizontalAlignment="Left" Margin="10,211,0,0" VerticalAlignment="Top" Width="75" ValueChanged="gameSpeedSlider_ValueChanged" Height="18"/>

	</Grid>
</Window>
